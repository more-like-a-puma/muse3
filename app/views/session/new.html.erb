<div class="container">
  <div class="section">
    <h1>MuseÂ³</h1>

    <% if @current_user %>
      <p>You are already logged in...</p>
    <% else %>
      <%= form_tag login_path do %>
        <div>
          <%= label_tag :email %>
          <%= email_field_tag :email %>
        </div>

        <div>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>

        <div>
          <%= submit_tag "Login" %>
          <%= link_to "Sign Up", new_user_path %>
        </div>

      <% end %>
    <% end %>
  </div>
</div>
